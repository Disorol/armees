                    BorderBrush="Transparent"
                    Background="Black"
                    ResizeDirection="Columns"
                    ResizeBehavior="PreviousAndNext"
                    HorizontalAlignment="Stretch"
                    IsVisible="{Binding SplittersVisibility.LR_Splitter}" />

