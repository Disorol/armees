                                  <Setter Property="CornerRadius" Value="17"/>
                                  <Setter Property="Padding" Value="0"/>
                                  <Setter Property="Margin" Value="5 0 0 0" />
                                  <Setter Property="VerticalAlignment" Value="Center" />
