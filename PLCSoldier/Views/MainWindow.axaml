          <!-- Central-and-far-right-space-template -->
          <RowDefinition Height="{Binding SpacesDimensions.CentralAndFarRightSpacesHeight}"/>
          <!-- Splitter-template -->
          <RowDefinition Height="1" MaxHeight="1"/>
          <!-- Bottom-space-template -->
          <RowDefinition Height="{Binding SpacesDimensions.BottomSpaceHeight}" />
        </Grid.RowDefinitions>

